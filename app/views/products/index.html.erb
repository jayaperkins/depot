<h1 id="title">Product List</h1>
<div class="product-container">
  <% @products.each do |product| %>
      <div class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <div class="product-img">
          <%= image_tag(product.image_url, class: 'list_image') %>
        </div>
        <div class="list_description">
          <div>
            <div><%= product.title %></div>
            <div><%= truncate(strip_tags(product.description), length: 80) %></div>
          </div>
        </div>
        <div class="list_actions">
          <div class="edit"><%= link_to 'Show', product %></div>
          <div class="edit"><%= link_to 'Edit', edit_product_path(product) %></div>
          <div class="edit"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      </div>
  <% end %>
</div>
<br>
<%= link_to 'New product', new_product_path %>
